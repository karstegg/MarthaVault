{
  "name": "MarthaVault WhatsApp",
  "image": "mcr.microsoft.com/devcontainers/go:1.21",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {},
    "ghcr.io/devcontainers/features/sshd:1": {
      "version": "latest"
    }
  },
  "postCreateCommand": "bash .devcontainer/setup.sh",
  "postStartCommand": "bash .devcontainer/enforce-master-sync.sh && bash .devcontainer/start-whatsapp-mcp.sh && bash .devcontainer/start-auto-sync.sh",
  "mounts": [
    "source=whatsapp-sessions,target=/workspaces/sessions,type=volume"
  ],
  "settings": {
    "git.autofetch": true,
    "git.autorefresh": true
  },
  "customizations": {
    "vscode": {
      "settings": {
        "git.autofetch": true,
        "git.autorefresh": true,
        "git.pullBeforeCheckout": true
      },
      "extensions": [
        "ms-python.python",
        "GitHub.vscode-pull-request-github"
      ]
    }
  },
  "portsAttributes": {
    "8080": {
      "label": "WhatsApp MCP Server",
      "onAutoForward": "notify"
    }
  }
}